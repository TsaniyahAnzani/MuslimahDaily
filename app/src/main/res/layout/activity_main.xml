<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background"
    android:orientation="vertical"
    >
    <ImageView
        android:src="@drawable/logo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"

        >
    <ImageButton
        android:src="@drawable/alquran"
        android:layout_margin="5dp"
        android:id="@+id/quran"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_above="@id/amalyaumi"
        android:background="@color/colorAccent"
        />
    <ImageButton
        android:src="@drawable/asmaul"
        android:layout_margin="5dp"
        android:id="@+id/asmaul"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_above="@id/amalyaumi"
        android:background="@color/colorAccent"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
    <ImageButton
        android:src="@drawable/amal"
        android:layout_margin="5dp"
        android:id="@+id/amalyaumi"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorAccent"
        />
    <ImageButton
        android:src="@drawable/haid"
        android:layout_margin="5dp"
        android:id="@+id/haid"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Haid History"
        android:layout_below="@id/amalyaumi"
        android:background="@color/colorAccent"
        /></LinearLayout>
</LinearLayout>